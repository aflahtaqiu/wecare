<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.chessburger.wecare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_wecare"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_wecare"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".module.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".module.create_campaign_search_volunteer.CreateCampaignSearchVolunteerActivity" />
        <activity android:name=".module.create_campaign_search_place.CreateCampaignSearchPlaceActivity" />
        <activity android:name=".module.detail_campaigned_activity.DetailCampaignedActivity" />
        <activity android:name=".module.detail_activity_search_volunter.DetailActSearchVolunteerActivity" />
        <activity android:name=".module.detail_activity_search_place.DetailActSearchPlaceActivity" />
        <activity android:name=".module.detail_article.DetailArticleActivity" />
        <activity android:name=".module.wecare_poin.WeCarePoinActivity" />
        <activity android:name=".module.edit_profile.EditProfileActivity" />
        <activity android:name=".module.splash_screen.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.mainact.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>